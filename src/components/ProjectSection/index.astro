---
import {H2} from '@/components/ui/typography';
import { Button } from '@/components/ui/button';
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
import { LuGithub } from "react-icons/lu";
---
<section class="flex flex-col items-center gap-10 my-20">
<div class="text-center flex flex-col gap-5">
    <H2 header="Featured Projects"/>
    <p>A selection of my most impactful projects showcasing  development, design and problem-solving skills.</p>
</div>
<div class="grid grid-cols-2">
    {projects.map((project) => (
        <p>{project.data.name}</p>
    ))}
</div>
    <a
    href="https://github.com/FaroukBenHaj"
    ><Button
    variant="default"
    size="lg"
    ><LuGithub />
    View all projects on Github</Button></a>
</section>