---
import { getCollection } from 'astro:content';
const generals = await getCollection("generals");
const generalInfo = generals[0];
import {Button} from '@/components/ui/button';
---


<div id="container">
	<img id="background"  alt="" />
	<main>
		<section id="hero" 
		class="flex flex-col text-center lg:gap-5  md:gap:2 gap-1  bg-amber-200 p-20" >
				<p class="lg:text-xl md:text-md text-sm font-light "
				>{generalInfo.data.description}</p>

				<h1 class="scroll-m-20 xl:text-8xl lg:text-5xl  md:text-4xl  sm:text-3xl  text-2xl  font-black tracking-tight text-balance ">
					<span>
						Software Architecture Engineer
					</span>
					<br>
						<span>
						 & Web developper
						</span>
					
				</h1>

				<div class='flex justify-around'>
				<p class="lg:text-2xl md:text-xl sm:text-md  text-sm font-light "
				>{generalInfo.data.country}</p>
				<p class="lg:text-2xl md:text-xl sm:text-md  text-sm font-light "
				>{generalInfo.data.uni}</p>
				</div>

				<div	id="home-btn">
					<Button>{generalInfo.data.actionbutton?.contact}</Button>
					<Button variant="outline">{generalInfo.data.actionbutton?.cv}</Button>
				</div>
				
		</section>
	</main>
</div>